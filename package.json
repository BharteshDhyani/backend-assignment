{
  "name": "app-backend",
  "description": "Backend",
  "scripts": {
    "link:shared": "nodemon --watch \"../shared/**/*.ts\" -e ts,json --exec \"cp -r ../shared ./src/ \"",
    "start:server": "nodemon --watch \"src/**/*.ts\" -e ts,json --exec \"ts-node --transpile-only ./src/server.ts\"",
    "start": "concurrently \"npm run start:server\"",
    "test": "nodemon --exec \"cross-env NODE_ENV=test mocha -r ts-node/register ./src/**/*.test.ts --exit || exit 1\"",
    "build:documentation": "copyfiles --flat ./src/documentation/openapi.json ./dist/documentation/",
    "build": "tsc && npm run build:documentation",
    "db:create": "npm run build && node ./dist/database/migrations/create",
    "stripe:login": "stripe login",
    "stripe:start": "stripe listen --forward-to localhost:8080/api/plan/stripe/webhook"
  },
  "dependencies": {
    "@google-cloud/storage": "7.16.0",
    "@types/body-parser": "^1.19.6",
    "@types/logform": "^1.10.1",
    "bcrypt": "5.1.1",
    "cli-highlight": "2.1.11",
    "concurrently": "^9.1.2",
    "cors": "2.8.5",
    "dotenv": "16.5.0",
    "express": "^5.1.0",
    "express-correlation-id": "^3.0.1",
    "firebase": "^11.6.1",
    "firebase-admin": "^13.3.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "logform": "^2.7.0",
    "moment": "2.30.1",
    "mongoose": "8.13.2",
    "mv": "2.1.1",
    "passport": "0.7.0",
    "passport-facebook": "3.0.0",
    "passport-google-oauth": "2.0.0",
    "postmark": "^4.0.5",
    "stripe": "18.0.0",
    "swagger-ui-express": "5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "private": true,
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-correlation-id": "^1.2.6",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.14.1",
    "@types/swagger-ui-express": "^4.1.8",
    "copyfiles": "2.4.1",
    "cross-env": "7.0.3",
    "mocha": "11.1.0",
    "node-mocks-http": "1.16.2",
    "nodemon": "3.1.10",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  }
}
